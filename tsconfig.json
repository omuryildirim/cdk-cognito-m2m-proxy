{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ES2022",
    "lib": ["DOM"],
    "types": ["node"],
    "typeRoots": ["node_modules/@types", "src/@types"],
    "moduleResolution": "Node",
    "baseUrl": "./",
    "outDir": "dist-cjs",
    "paths": {
      "~/*": ["src/*"]
    },
    "esModuleInterop": true,
    "declarationMap": true,
    "declaration": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "noImplicitReturns": true,
    "inlineSourceMap": true,
    "inlineSources": true,
    "experimentalDecorators": true
  },
  "include": ["./src/**/*.ts"],
  "exclude": ["node_modules", "**/*.spec.ts", "**/*.test.ts"]
}
